
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}
@model TccAds.Models.Usuarios
<div class="account-pages my-5 pt-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card overflow-hidden">
                    <div class="bg-primary bg-soft">
                        <div class="row">
                            <div class="col-7">
                                <div class="text-primary p-4">
                                    <h5 class="text-primary">Fazer Cadastro</h5>
                                    <p>Faça seu cadastro agora!</p>
                                </div>
                            </div>
                            <div class="col-5 align-self-end">
                                <img src="~/assets/images/profile-img.png" alt="" class="img-fluid">
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-0">
                        <div>
                            <a href=@Url.Action("Index", "index")>
                                <div class="avatar-md profile-user-wid mb-4">
                                    <span class="avatar-title rounded-circle bg-light">
                                        <img src="~/assets/images/logo.svg" alt="" class="rounded-circle" height="34">
                                    </span>
                                </div>
                            </a>
                        </div>
                        <div class="p-2">
                            <form class="needs-validation" method="post" novalidate action=@Url.Action("Create", "Login")>
                                <div class="mb-3">
                                    <label for="useremail" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="UsrEmail" name="UsrEmail" placeholder="" required>
                                    <div class="invalid-feedback">
                                        Email é obrigatório
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="username" class="form-label">Usuário</label>
                                    <input type="text" class="form-control" id="UsrNome" name="UsrNome" placeholder="" required>
                                    <div class="invalid-feedback">
                                        Usuário é obrigatório
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="userpassword" class="form-label">Senha</label>
                                    <input type="password" class="form-control" id="UsrSenha" name="UsrSenha" placeholder="" required>
                                    <div class="invalid-feedback">
                                        Senha é obrigatório
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-10">
                                        <div class="mb-3">
                                            <label for="formrow-inputCity" class="form-label">Rua</label>
                                            <input type="text" class="form-control" id="UsrRua" name="UsrRua" required>
                                            <div class="invalid-feedback">
                                                Rua é obrigatório
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2">
                                        <div class="mb-1">
                                            <label for="formrow-inputCity" class="form-label">Nº</label>
                                            <input type="text" class="form-control" id="UsrNum" name="UsrNum" required>
                                           
                                        </div>
                                    </div>
                                    </div>
                                   
                                       
                                <div class="mb-3">
                                    <label for="formrow-inputCity" class="form-label">Bairro</label>
                                    <input type="text" class="form-control" id="UsrBairro" name="UsrBairro" required>
                                    <div class="invalid-feedback">
                                        Bairro é obrigatório
                                    </div>
                                </div>                                                      
                                <div class="mb-3">
                                    <label for="formrow-inputCity" class="form-label">Cidade</label>
                                    <input type="text" class="form-control" id="UsrCidade" name="UsrCidade" required>
                                    <div class="invalid-feedback">
                                        Cidade é obrigatório
                                    </div>
                                </div>
                                    
                                  
                                    <div class="mt-4 d-grid">
                                        <button class="btn btn-primary waves-effect waves-light" type="submit">Registrar</button>
                                    </div>

                                    <div class="mt-4 text-center">
                                        <h5 class="font-size-14 mb-3">Sign up using</h5>

                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <a href="javascript::void()" class="social-list-item bg-primary text-white border-primary">
                                                    <i class="mdi mdi-facebook"></i>
                                                </a>
                                            </li>
                                            <li class="list-inline-item">
                                                <a href="javascript::void()" class="social-list-item bg-info text-white border-info">
                                                    <i class="mdi mdi-twitter"></i>
                                                </a>
                                            </li>
                                            <li class="list-inline-item">
                                                <a href="javascript::void()" class="social-list-item bg-danger text-white border-danger">
                                                    <i class="mdi mdi-google"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>

                                    <div class="mt-4 text-center">
                                        <p class="mb-0">By registering you agree to the Skote <a href="#" class="text-primary">Terms of Use</a></p>
                                    </div>
</form>
                        </div>

                    </div>
                </div>
                <div class="mt-5 text-center">

                    <div>
                        <p>Already have an account ? <a href=@Url.Action("Index", "AuthLogin") class="fw-medium text-primary"> Login</a> </p>
                        <p>
                            ©
                            <script>document.write(new Date().getFullYear())</script> Skote. Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesbrand
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- validation init -->
<script src="~/assets/js/pages/validation.init.js"></script>

<!-- App js -->
<script src="~/assets/js/app.js"></script>
